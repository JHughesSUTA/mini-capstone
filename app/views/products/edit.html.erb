<h1>Edit Product</h1>

<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">
    Product Name: <input type="text" class="form-control" value="<%= @product.name %>" name="form_name">
  </div>
  <div class="form-group">
    Price: <input type="text" class="form-control" value="<%= @product.price %>" name="form_price">
  </div>
  <div class="form-group">
    Description: <input type="text" class="form-control" value="<%= @product.description %>" name="form_description">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
<% end %>