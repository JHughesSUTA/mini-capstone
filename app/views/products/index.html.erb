<% if current_user %>
  <p>Hi, <%= current_user.name %>!</p>
<% end %>  
<h1>All Products</h1>
<p>Sort by: </p><a href="/products?sort_by=price">PRICE</a>
<a href="/products?sort_by=price desc">PRICE (Descending)</a>
<% @products.each_slice(3) do |three_products| %>
  <div class="row">
    <% three_products.each do |product| %>
      <div class="col-md-4">
        <div class="well">
          <h3><a href="/products/<%= product.id %>"><%= product.name %></a></h3>
          <img class="product-image" src="<%= product.images[0].url %>" alt="<% product.name %>"> 
          <h4><%= number_to_currency(product.price) %></h4>
          <h4><%= product.description %></h4>
        </div>
      </div> 
    <%end%>
  </div>
<% end %> 
<a href="/products/new">Add new product</a>
