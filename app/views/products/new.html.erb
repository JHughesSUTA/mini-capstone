<h1>New Product</h1>

<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

 <%= form_tag "/products", method: :post do %>
   <div class="form-group">
     <label for="exampleProductName">Product Name</label>
     <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Product" name="form_name" value="<%= @product.name %>">
   </div>
   <div class="form-group">
     <label for="examplePrice">Price</label>
     <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Price" name="form_price" value="<%= @product.price %>">
   </div>
   <div class="form-group">
     <label for="exampleImage">Image</label>
     <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Image URL" name="form_image" value="<%= @product.images.first %>">
   </div>
   <div class="form-group">
     <label for="exampleDescription">Description</label>
     <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Description" name="form_description" value="<%= @product.description %>">
   </div>
   <button type="submit" class="btn btn-default">Submit</button>
 <% end %>